{
    "manifest_version": 3,
    "name": "AI Chatting Mail Summarizer",
    "version": "1.2",
    "description": "Summarize your emails with AI, then know what should i do.",
    "icons": {
        "512": "icon.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "ai-chatting-mail-summarizer@FuLuTang.com",
            "strict_min_version": "115.0"
        }
    },
    "permissions": [
        "messagesRead",
        "accountsRead",
        "activeTab",
        "tabs",
        "storage",
        "messagesTags",
        "messagesTagsList",
        "messagesUpdate"
    ],
    "background": {
        "scripts": [
            "settings.js",
            "helpers.js",
            "background.js"
        ]
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "message_display_action": {
        "default_popup": "popup.html",
        "default_title": "AI Summary",
        "default_icon": "icon.png"
    },
    "action": {
        "default_title": "AI Agent",
        "default_icon": "icon.png"
    }
}