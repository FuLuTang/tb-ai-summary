{
    "manifest_version": 2,
    "name": "AI Mail Summarizer",
    "version": "1.1",
    "description": "一键总结当前邮件",
    "icons": {
        "48": "icon.png"
    },
    "permissions": [
        "messagesRead",
        "accountsRead",
        "activeTab",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "AI 总结"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "ai-summarizer@yourname.com",
            "strict_min_version": "115.0"
        }
    }
}